<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/usernameTitle"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="52dp"
        android:text="Username"
        android:textSize="24sp"
        tools:ignore="NotSibling"
        android:layout_marginLeft="18dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/emailTitle"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/usernameTitle"
        android:layout_marginTop="159dp"
        android:text="Email"
        android:textSize="24sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/passwordTitle"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/usernameTitle"
        android:layout_marginTop="261dp"
        android:text="Password"
        android:textSize="24sp"
        android:layout_alignLeft="@+id/usernameTitle" />

    <Button
        android:id="@+id/button3"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="124dp"
        android:layout_marginStart="36dp"
        android:background="#CC6633"

        android:text="Create Your Account"
        android:textColor="@android:color/background_light"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="36dp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/usernameTitle"
        android:ems="10"
        android:hint="Enter your Username Here"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/email"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/emailTitle"
        android:ems="10"
        android:hint="Enter your Email Here"
        android:inputType="textEmailAddress"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/password"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/passwordTitle"
        android:ems="10"
        android:hint="Enter your Password Here"
        android:inputType="textPassword"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
