<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".HomePageActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FF9900"
        android:text="Profile"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/profile_title"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/profile_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/profile_icon"
        android:scaleType="fitCenter"
        android:id="@+id/user_image"/>

    <TextView
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@id/profile_title"
        android:layout_toRightOf="@id/user_image"
        android:layout_marginTop="63dp"
        android:layout_marginLeft="20dp"
        android:text="Username:"
        android:textStyle="bold"
        android:id="@+id/username_text"
        android:textSize="18sp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/username_text"
        android:layout_below="@id/profile_title"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:inputType="text"
        android:id="@+id/input_username" />

    <TextView
        android:layout_width="57dp"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/user_image"
        android:layout_below="@id/username_text"
        android:layout_marginLeft="20dp"
        android:text="Phone:"
        android:id="@+id/phone_text"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="1890dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/phone_text"
        android:layout_below="@id/input_username"
        android:layout_marginTop="16dp"
        android:inputType="phone"
        android:id="@+id/input_phone"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/user_image"
        android:text="Change Icon"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginLeft="28dp"
        android:textColor="#365fd1"
        android:id="@+id/change_icon" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:text="Address:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/change_icon"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="20dp"
        android:id="@+id/address_text"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:id="@+id/input_address"
        android:inputType="text"
        android:layout_marginTop="15dp"
        android:layout_below="@id/input_phone"
        android:layout_toRightOf="@id/address_text"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="Email:"
        android:textSize="18dp"
        android:layout_below="@id/address_text"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:id="@+id/email_text"
        android:layout_marginLeft="28dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/input_email"
        android:layout_toRightOf="@id/email_text"
        android:layout_below="@id/input_address"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Edit"
        android:textColor="#365fd1"
        android:id="@+id/edit_profile"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"/>

    <ImageButton
        android:id="@+id/profile_back_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@mipmap/home_page_icon" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_above="@id/profile_back_icon"
        android:layout_below="@id/input_email"
        android:layout_marginTop="115dp">

        <LinearLayout
            android:id="@+id/comment_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Back"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/profile_wishlist_btn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/edit_profile"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="-10dp"
        android:text="Wishlist" />

    <TextView
        android:id="@+id/comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/user_image"
        android:layout_below="@+id/overall_rating"
        android:text="Comments:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rating_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/user_image"
        android:layout_centerVertical="true"
        android:text="Overall Rating:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/overall_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/profile_wishlist_btn"
        android:layout_centerVertical="true" />

</RelativeLayout>
