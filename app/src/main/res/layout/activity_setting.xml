<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tongan.unitrade.SettingActivity"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/title"
        android:text="Unitrade Setting Page"
        android:textSize="20sp"
        android:background="#FF9900"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"
        android:id="@+id/wishlist_setting_icon"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@mipmap/wishlist_icon"
        />

    <TextView
        android:id="@+id/wishlist_text"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_below="@+id/wishlist_setting_icon"
        android:text="    WishList"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@null"
        android:layout_toRightOf="@+id/wishlist_setting_icon"
        android:layout_below="@id/title"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="55dp"
        android:src="@mipmap/profile_icon"
        android:id="@+id/profile_setting_icon"
        android:scaleType="fitCenter"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="     Profile"
        android:textSize="18sp"
        android:layout_below="@id/profile_setting_icon"
        android:layout_toRightOf="@id/wishlist_setting_icon"
        android:textStyle="bold"
        android:id="@+id/profile_text"
        android:layout_marginLeft="55dp"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@null"
        android:src="@mipmap/noti_icon"
        android:scaleType="fitCenter"
        android:layout_below="@id/wishlist_text"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="30dp"
        android:id="@+id/noti_setting_icon"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:id="@+id/notification_text"
        android:text="Notification"
        android:layout_below="@id/noti_setting_icon"
        android:layout_marginLeft="55dp"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@mipmap/order_icon"
        android:layout_below="@id/profile_text"
        android:layout_marginTop="35dp"
        android:id="@+id/myOrder_setting_icon"
        android:layout_marginLeft="55dp"
        android:layout_toRightOf="@id/noti_setting_icon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:text="   My Order"
        android:layout_toRightOf="@+id/noti_setting_icon"
        android:layout_below="@+id/myOrder_setting_icon"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/myOrder_text"
        android:layout_marginLeft="55dp"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/notification_text"
        android:layout_marginLeft="55dp"
        android:src="@mipmap/logout_icon"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_marginTop="35dp"
        android:id="@+id/logout_setting_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/logout_setting_icon"
        android:text="     Logout"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="55dp"
        android:id="@+id/logout_text"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@null"
        android:src="@mipmap/home_page_icon"
        android:scaleType="fitCenter"
        android:layout_below="@id/myOrder_text"
        android:id="@+id/settings_home_page_icon"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/logout_setting_icon"
        android:layout_marginLeft="55dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text=" Home Page"
        android:layout_below="@+id/settings_home_page_icon"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/logout_setting_icon"
        android:layout_marginLeft="55dp"/>

</RelativeLayout>
