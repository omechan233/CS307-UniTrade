<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.tongan.unitrade.NewPostActivity">


    <TextView
        android:id="@+id/title_new_post"
        android:text="New Post"
        android:textSize="20sp"
        android:background="#FF9900"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="132dp"
        android:layout_height="123dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_new_post"
        android:contentDescription="ItemImage"
        android:src="@mipmap/poi_test_src"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/upload_image"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item_image"
        android:text="Upload Image"
        android:textColor="#365fd1"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/item_name_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/upload_image"
        android:layout_marginLeft="30dp"
        android:text="Item Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_name_text2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/upload_image"
        android:layout_marginLeft="30dp"
        android:text="Item Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/item_name_text"
        android:layout_marginLeft="30dp"
        android:inputType="text"
        android:lines="1"
        android:id="@+id/item_name_input"
        android:hint="Enter your item name here"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:text="Price"
        android:textSize="18sp"
        android:layout_below="@id/item_name_input"
        android:layout_marginTop="1dp"
        android:id="@+id/price_text"
        android:layout_marginLeft="30dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/price_text"
        android:lines="1"
        android:layout_marginLeft="30dp"
        android:inputType="numberDecimal"
        android:hint="Enter the item price here"
        android:id="@+id/price_input"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:text="Description"
        android:textSize="18sp"
        android:layout_below="@id/price_input"
        android:layout_marginTop="1dp"
        android:id="@+id/desc_text"
        android:layout_marginLeft="30dp" />

    <EditText
        android:id="@+id/desc_input"
        android:layout_width="340dp"
        android:layout_height="142dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="89dp"
        android:background="@drawable/message_box"
        android:gravity="top"
        android:hint=" Enter your item description here"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/item_name_text"
        android:layout_marginBottom="32dp"
        android:text="SUBMIT"
        android:layout_alignLeft="@+id/item_name_text" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/submit_btn"
        android:layout_marginEnd="35dp"
        android:text="CANCEL"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp" />

    <TextView
        android:id="@+id/category_text"
        android:layout_width="162dp"
        android:layout_height="30dp"
        android:layout_above="@+id/category_input"
        android:layout_marginBottom="-97dp"
        android:layout_toEndOf="@+id/item_image"
        android:text="Category"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/item_image" />

    <EditText
        android:id="@+id/category_input"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="102dp"
        android:ems="10"
        android:hint="Enter your item's category here"
        android:inputType="textPersonName"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp" />

</RelativeLayout>
